<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/RegistroCivil</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">verde</property>
        
        <!-- JDBC connection pool (usa la integrada en Hibernate) -->
        <property name="connection.pool_size">1</property>

        <!-- Automatic session context managment -->
        <property name="current_session_context_class">thread</property>
        
        <!-- Imprime en salida estandar las sentencias SQL efectuadas por Hibernate -->
        <property name="show_sql">true</property>
        
        <!-- Elimina y crea nuevamente el esquema cada que inicia la aplicaciÃ³n -->
        <property name="hbm2ddl.auto">update</property>

        <property name="c3p0.acquire_increment">1</property>
        <property name="c3p0.idle_test_period">100</property>
        <property name="c3p0.max_size">80</property>
        <property name="c3p0.max_statements">0</property>
        <property name="c3p0.min_size">50</property>
        <property name="c3p0.timeout">100</property>

        <!-- Mapeos -->
        <mapping class="mx.gob.renapo.registrocivil.entity.CatOficialia" />
        <mapping class="mx.gob.renapo.registrocivil.entity.CatMunicipio" />
        <mapping class="mx.gob.renapo.registrocivil.entity.CatEstado" />
    </session-factory>
</hibernate-configuration>
